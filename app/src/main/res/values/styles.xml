<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <color name="colorPrimary">#008577</color>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.AppCompat.Button"  >
        
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor"></item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button" >
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/md_grey_50</item>
    </style>
    <style name="editTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_centerHorizontal">true</item>
       <item name="boxStrokeColor">@color/md_pink_600</item>
        <item name="fontFamily">robomedium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>
