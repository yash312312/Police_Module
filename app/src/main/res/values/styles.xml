<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#008577</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.MaterialComponents.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/md_grey_50</item>
    </style>


    <style name="editTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="boxStrokeColor">@color/md_pink_600</item>
        <item name="fontFamily">robomedium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#000</item>
    </style>
     <style name="AppTheme.NoActionBar">
         <item name="windowActionBar">false</item>
         <item name="windowNoTitle">true</item>
         <item name="android:statusBarColor">@android:color/transparent</item>
     </style>
</resources>
