<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/police_frag_tv_stationimage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120sp"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:text="Welcome to ANOMITE"
            android:textAlignment="center"
            android:textColor="@color/md_pink_800"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="visible">

        </TextView>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/editTextStyle"
        android:layout_marginTop="300dp"
        android:elevation="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_login_tv_email"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:hint="Email"
            android:layout_marginTop="300dp"
            android:drawablePadding="10dp"
            android:inputType="text" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/editTextStyle"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="380dp"
        android:elevation="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_login_tv_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:text="Login"
        android:id="@+id/activity_login_btn_login"
        android:layout_marginTop="530dp"
        android:layout_centerHorizontal="true"
        app:rippleColor="@color/md_pink_100"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:backgroundTint="@color/md_pink_700"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="New to Anomite."
        android:layout_marginTop="650dp"
        android:textAlignment="center"
        android:layout_marginLeft="90dp"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/activity_login_tv_join"
        android:text="Join now"
        android:layout_marginTop="650dp"
        android:textSize="15dp"
        android:layout_marginLeft="220dp"
        android:textColor="@color/md_pink_700"
        />

</RelativeLayout>